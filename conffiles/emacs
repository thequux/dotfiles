	      (cadr var)))
    (setq exec-path (split-string (getenv "PATH") path-separator)))

  (when (getenv "OCAML_TOPLEVEL_PATH")
    (push (concat (shell-command-to-string "opam config var share")
		  
		  "/emacs/site-lisp")
